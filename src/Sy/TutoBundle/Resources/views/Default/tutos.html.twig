{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} - Tutoriels{% endblock %}

{% block body %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <h1>Tutoriels</h1>

    <div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Cat√©gories
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item"
               href="{{ path('sy_tutos') }}">
                Tout afficher
            </a>
            {% for category in categories %}
                <a class="dropdown-item"
                   href="{{ path('sy_tutos', {'category': category.slug}) }}">
                    {{ category.name }}
                </a>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('sy_addTuto') }}" type="button" class="btn btn-success">Ajouter</a>

    <div class="list-group col-sm-10 offset-sm-1">

        {% for tuto in tutos %}

            <a href="{{ path('sy_tuto', {'slug': tuto.slug}) }}"
               class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ tuto.title }}</h5>
                    <small>
                        {% if tuto.editDate == null %}
                            {{ tuto.date|date('d.m.Y') }}
                        {% else %}
                            {{ tuto.editDate|date('d.m.Y') }}
                        {% endif %}
                    </small>
                </div>
                <p class="mb-1">
                    {{ tuto.content|slice(0, 100) }}
                </p>

                {% if app.user == tuto.author %}
                    <a href="{{ path('sy_editTuto', {'id': tuto.id}) }}"
                       type="button"
                       class="btn btn-primary col-sm-2">Modifier</a>
                {% endif %}

                <small>Par {{ tuto.author }}</small>
            </a>

        {% endfor %}

    </div>

{% endblock %}