<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Stud'Ynov{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >

            <div class="container-fluid">

                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-item nav-link" href="{{ path('sy_agenda') }}">Agenda</a></li>
                </ul>
                <ul class="navbar-nav navbar-right">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-item nav-link" style="font-size: 20px;" href="{{ path("sonata_admin_redirect") }}">
                                Sonata Admin
                            </a>
                        </li>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item">
                            <a class="nav-item nav-link" style="font-size: 20px; padding-left: 40px;" href="{{ path("fos_user_security_logout") }}">
                                Deconnexion
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item {% if app.request.attributes.get('_route') == "fos_user_security_login" %}active{% endif %}">
                            <a class="nav-item nav-link" href="{{ path("fos_user_security_login") }}">
                                Se connecter
                            </a>
                        </li>
                    {% endif %}
                </ul>

            </div>

        </nav>


    </head>
    <body>
        {% block body %}{% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
